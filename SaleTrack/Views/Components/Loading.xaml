<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaleTrack.Views.Components.Loading"
             BackgroundColor="Transparent">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Frame Padding="20" BackgroundColor="WhiteSmoke" VerticalOptions="Center" HorizontalOptions="Center" BorderColor="#f2f0f5" HasShadow="True">
            <ActivityIndicator VerticalOptions="Center" HorizontalOptions="Center" 
                Color="SlateBlue" IsRunning="True"  />
        </Frame>
    </VerticalStackLayout>
</ContentView>
