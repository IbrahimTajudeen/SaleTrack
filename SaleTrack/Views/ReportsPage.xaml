<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SaleTrack.Views.ReportsPage"
             Title="ReportsPage">

    <VerticalStackLayout Padding="16" Spacing="12">

        <Button Text="Create New Report"
                Command="{Binding CreateReportCommand}"
                BackgroundColor="#0D6EFD"
                TextColor="White"
                CornerRadius="10" />

        <CollectionView ItemsSource="{Binding Reports}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="10" Padding="12" HasShadow="True">
                        <VerticalStackLayout>
                            <Label Text="{Binding DateRange}"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding SendEmail}"
                                   FontSize="12"
                                   TextColor="Gray" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>

</ContentPage>